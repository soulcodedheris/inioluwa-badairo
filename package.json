{
  "name": "portfolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "prebuild": "node ./scripts/build-articles.mjs && node ./scripts/copy-vendor.mjs && node ./scripts/prerender.mjs",
    "watch:articles": "node ./scripts/watch-articles.mjs",
    "dev": "concurrently \"npm:start\" \"npm:watch:articles\"",
    "build": "ng build",
    "build:clean": "rm -rf dist && rm -rf public/articles && rm -rf public/work && rm -rf public/principles && rm -rf public/certifications && rm -rf public/about && rm -rf public/contact && rm -rf public/playground && rm -rf public/assets/articles.json && rm -rf public/feed.* && rm -rf public/sitemap.xml && rm -rf src/assets/articles.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "prepare": "husky install",
    "precommit": "npm run prebuild && npm run lint"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "particles.js": "^2.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^18.3.1",
    "@angular-eslint/eslint-plugin": "^18.3.1",
    "@angular-eslint/eslint-plugin-template": "^18.3.1",
    "@angular-eslint/schematics": "^18.3.1",
    "@angular-eslint/template-parser": "^18.3.1",
    "@angular/build": "^20.1.4",
    "@angular/cli": "^20.1.4",
    "@angular/compiler-cli": "^20.1.0",
    "@fontsource-variable/inter": "^5.1.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.13",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.21",
    "cheerio": "^1.0.0",
    "concurrently": "^9.1.0",
    "dompurify": "^3.1.6",
    "eslint": "^8.57.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.6",
    "image-size": "^1.1.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "remark-slug": "^7.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2"
  }
}
